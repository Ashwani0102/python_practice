# Print number from 1 to 10 using while loop
i=1
while i<=10:
    print(i)
    i=i+1

# Calculate the sum of all even numbers from 1 to 100 using while loop
i=1
a=0
while i<=100:
    if i%2==0:
        a=a+i
    i=i+1
print(a) 

# Print number in reverse order from 10 to 1
i=10
while i>=1:
    print(i)
    i=i-1

# Program to count the number of digits in a given number using while loop
number = input("Enter the number: ")
i=0
while i<len(number):
    i =i+1  
print("Number of digits:", i) 

# Program to find the sum of a number using while loop
number = input("Enter the number: ")
i=0
a=0
while i<len(number):
    a=a+int(number[i])
    i=i+1
print("Sum of digits:",a)   

# Multiple Table of a number using while loop
number = int(input("Enter the number: "))
i=1
a=0
while i<=10:
    a=number*i
    print(a)
    i=i+1

#Largest digit in a number
number = input("Enter the number: ")
i=0
largest_number = '0'
while i<len(number):
    digit = number[i]
    if digit>largest_number:
        largest_number=digit
    i=i+1
print("Largest digit is",largest_number)   



    
